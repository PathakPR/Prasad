#include<stdio.h>
int main()
{
	int i, c, r, n;
                       //i is row number, c is column number,n is number of rows,i is temporary number
	printf("Enter number of row rows you would like to print pattern of *:");
	scanf("%d",&n);
	i=n;
for(r=1;r<=i;r++)
   {
    for(c=1;c<i;c++)
	{
	 printf(" ");
	 i=--i;
                     //printing space before printing "*" 
        } 
    for(c=1;c<=(2*i-1);c++)
	{
         printf("*");
	 i=i++;
        }  
         printf("\n");    
   }
return 0;
}

				

 
	
	  	

